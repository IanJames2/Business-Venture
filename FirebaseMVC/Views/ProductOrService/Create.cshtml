@model BusinessVenture.Models.ViewModels.ProductOrServiceFormViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Add A Product Or Service</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="ProductOrService.Business.Title" class="control-label"></label>
                <select asp-for="ProductOrService.BusinessId" class="form-control">
                    <option value="">Select A Business </option>
                    @foreach (Business business in Model.Businesses)
                    {
                        <option value="@business.Id">@business.Title</option>
                    }
                </select>
                <span asp-validation-for="ProductOrService.BusinessId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Name Of Product Or Service</label>
                <input asp-for="ProductOrService.NameOfProductOrService" class="form-control" />
                <span asp-validation-for="ProductOrService.NameOfProductOrService" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Cost In Dollar Amount</label>                
                <input asp-for="ProductOrService.Cost" class="form-control" />
                <span asp-validation-for="ProductOrService.Cost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

